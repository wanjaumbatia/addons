<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">afyaplug.patient.tree</field>
        <field name="model">afyaplug.patient</field>
        <field name="priority">4</field>
        <field name="arch" type="xml">
            <tree string="Patients" sample="1">
                <field name="patient_id"/>
                <field name="name"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">afyaplug.patient.form</field>
        <field name="model">afyaplug.patient</field>
        <field name="arch" type="xml">
            <form string="Patient">
                <field name="active" invisible="1"/>
                <field name="user_id" invisible="1"/>
                <field name="user_partner_id" invisible="1"/>
                <field name="image_128" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <header>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    <field name="avatar_128" invisible="1"/>
                    <div class="o_employee_avatar">
                        <field name="image_1920" widget='image' class="oe_avatar m-0"
                               options='{"zoom": true, "preview_image":"avatar_128"}'/>
                    </div>
                    <div class="oe_title">
                        <h1 class="d-flex flex-row">
                            <field name="name" placeholder="Patient's Name"
                                   required="True" style="font-size: min(4vw, 2.6rem);"/>
                        </h1>
                        <h2>
                            <field name="patient_id" placeholder="Patient No."/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="company_country_id" invisible="1"/>
                            <field name="company_country_code" invisible="1"/>
                        </group>
                        <group>
                            <field name="parent_id"/>
                            <field name="coach_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="address" string="Address Information">
                            <div id="o_work_employee_container"
                                 class="d-lg-flex"> <!-- These two div are used to position org_chart -->
                                <div id="o_work_employee_main" class="flex-grow-1">
                                    <group>
                                        <field name="residence"/>
                                        <field name="street"/>
                                        <field name="town"/>
                                        <field name="county"/>
                                    </group>
                                </div>
                            </div>
                        </page>
                         <page name="personal_details" string="Personal Information">

                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"
                           options="{'post_refresh': 'recipients'}"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_patient_search" model="ir.ui.view">
        <field name="name">afyaplug.patient.search</field>
        <field name="model">afyaplug.patient</field>
        <field name="arch" type="xml">
            <search string="Patients">
                <field name="name" filter_domain="['|', ('name', 'ilike', self), ('reference', 'ilike', self)]"/>

                <separator/>
                <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                <filter string="Female" name="female" domain="[('gender', '=', 'female')]"/>
                <group expand="1" string="Group By">
                    <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    <filter string="Patient Name" name="patient_name" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_afyaplug_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">afyaplug.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first patient!
            </p>
        </field>
    </record>



    <menuitem id="menu_config_root"
              name="Configuration"
              parent="menu_afyaplug_root"
              sequence="11"/>


    <menuitem id="menu_patient_root"
              name="Patients"
              parent="menu_afyaplug_root"
              sequence="9"/>

    <menuitem id="menu_patient"
              name="Patients List"
              parent="menu_patient_root"
              action="action_afyaplug_patient"
              sequence="9"/>
</odoo>