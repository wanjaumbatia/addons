<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="portal_my_home_documents" name="Show Patients" customize_show="True"
              inherit_id="portal.portal_my_home" priority="-100">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Patients</t>
                <t t-set="url" t-value="'/my/patients'"/>
                <t t-set="placeholder_count" t-value="'patients_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_breadcrumbs" name="Portal Breadcrumbs">
        <xpath expr="//ol{hasclass('o_portal_submenu')]" position="inside">
            <li class="breadcrumb-item ms-1">
                <a href="/my/home" aria-label="Home" title="Home">
                    <i class="fa fa-home"/>
                </a>
            </li>
            <li t-if="page_name == 'patient_list_view'" class="breadcrumb-item">Patients</li>
        </xpath>
    </template>

    <template id="web_patients_listview_portal">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Patients</t>
            </t>
            <t t-if="patients" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Patient Number</th>
                        <th>Name</th>
                        <th>Phone Number</th>
                    </tr>
                </thead>
                <t t-foreach="patients" t-as="patient">
                    <tr>
                        <td>
                            <a t-attf-href="/my/patient/#{patient.id}">
                                <t t-out="patient.reference"/>
                            </a>
                        </td>
                        <td>
                             <a t-attf-href="/my/patient/#{patient.id}">
                                <t t-out="patient.name"/>
                            </a>
                        </td>
                        <td>
                            <span t-out="patient.phone"/>
                        </td>
                    </tr>
                </t>
            </t>
            <p t-else="">There are currently no patients assigned to your account.</p>
        </t>
    </template>

    <template id="web_patients_formview_portal">
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
student
        </xpath>
    </template>
</odoo>